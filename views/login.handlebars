
 {{#if resetSuccess}}
        <div class="alert alert-success">{{resetSuccess}}<span class="close" data-dismiss="alert">&times;</span></div>
  {{/if}}
<section class="col-md-7">
<h1 class="logo text-primary">WEBSHARE</h1>
<h3 class="text-primary">Connecting loved ones closer together with the world</h3>
<br /><br />
<img src="/public/images/AAA.png" / class="img-responsive">
</section>

<section class="col-md-5">
      <form method="post" action="/login"  class="form-horizontal" role="form">
      {{#if loginError}}
        <div class="alert alert-danger">{{loginError}}<span class="close" data-dismiss="alert">&times;</span></div>
      {{/if}}
        <div class="form-group">
            <div class="col-sm-12">
            <input type="email" name="email" class="form-control input-lg" id="email" placeholder="Email" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
            <input type="password" name="password" class="form-control input-lg" id="password" placeholder="Password" required>
            </div>
        </div>
    
        <div class="form-group text-center">
            <div class="col-sm-12">
            <button type="submit" class="btn btn-primary btn-block btn-lg">Log In</button>
            </div>
        </div>
        <p class="text-center"><a href="/recover">Forgotten account?</a></p>
        <hr />
        <div class="form-group text-center">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success btn-lg btn-create">Create New Account</button>
            </div>
        </div>
</form>
</section>

<div class="modal fade" id="signupModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1 class="modal-title">Sign Up</h1>
        <p>It's quick and easy</p>
      </div>
      <div class="modal-body">
         <form method="post" action=""  class="form-horizontal" role="form" id="signupForm">
            <div class="form-group row">
                <div class="col-sm-6">
                <input type="text" name="firstname" class="form-control input-lg" id="firstname" placeholder="First Name" required>
                <p class="text-danger" id="firstname_text"></p>
                </div>
                <div class="col-sm-6">
                <input type="text" name="lastname" class="form-control input-lg" id="lastname" placeholder="Last Name" required>
                <p class="text-danger" id="lastname_text"></p>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="email" name="email" class="form-control input-lg" id="signup_email" placeholder="Email" required>
                    <p class="text-danger" id="email_text"></p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                     <input type="password" name="password" class="form-control input-lg" id="signup_password" placeholder="Password" required>
                     <p class="text-danger" id="password_text"></p>
                </div>
             </div>
            <div class="form-group">
                <div class="col-sm-12">
                     <input type="password" name="confirmpassword" class="form-control input-lg" id="confirmpassword" placeholder="Confirm Password" required>
                     <p class="text-danger" id="confirmpassword_text"></p>
                </div>
            </div>
            <div class="form-group text-center">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-success btn-lg btn-signup">Sign Up</button>
                </div>
            </div>
        </form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

    