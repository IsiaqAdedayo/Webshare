<section class="upload-area">
    <h4>Upload Image</h4>

    <form method="post" action="/upload" enctype="multipart/form-data" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="file" class="col-sm-2 control-label">Browse</label>
            <div class="col-sm-10">
            <input type="file" name="file" class="form-control" id="file" required>
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
            <input type="title" name="title" class="form-control" id="title" placeholder="Title" required>
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
            <textarea name="description" class="form-control" id="description" placeholder="Description" required></textarea>
            </div>
        </div>
    
        <div class="form-group text-right">
            <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </div>
</form>

</section>

<section class="newest_image_area">
    <h4>Newest Images</h4>

    {{#if images}}
        <div class="row">
        {{#each images}}
            <div class="col-md-4">
                <a href="/image/{{uniqueId}}">
                    <img src="/public/upload/{{filename}}" alt="{{title}}" title="{{description}}" class="img-responsive img-thumbnail" />
                </a>
            </div>
        {{/each}}
        </div>
         {{else}}
        <p>Newest Images will show up here</p>
    {{/if}}
</section>

    